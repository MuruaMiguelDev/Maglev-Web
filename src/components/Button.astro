---
const { variant = 'primary', href = undefined, label = 'Bot√≥n', type = 'button' } = Astro.props;
const base = 'inline-flex items-center justify-center px-6 sm:px-8 py-3 rounded-xl font-semibold shadow-lg transition-all duration-300';
const styles = {
  primary: `${base} bg-gradient-to-r from-yellow-500 to-orange-500 text-white hover:from-yellow-400 hover:to-orange-400 hover:scale-105`,
  ghost: `${base} glass-effect text-white hover:bg-white/20`,
  premium: `${base} premium-button text-white`
};
---
{href ? (
  <a href={href} class={styles[variant]}>{label}</a>
) : (
  <button type={type} class={styles[variant]} data-label={label}>{label}</button>
)}